<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/data_inspector_material_dialog_padding_between_title_and_body_text"
    android:paddingLeft="@dimen/data_inspector_material_dialog_padding_around_content_area"
    android:paddingRight="@dimen/data_inspector_material_dialog_padding_around_content_area"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Database"
        android:gravity="center_vertical"
        style="@style/TextAppearance.AppCompat.Menu"
        android:alpha="0.54"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Table"
        android:gravity="center_vertical"
        style="@style/TextAppearance.AppCompat.Menu"
        android:alpha="0.54"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Column"
        android:gravity="center_vertical"
        style="@style/TextAppearance.AppCompat.Menu"
        android:alpha="0.54"
        android:textSize="12sp"
        android:paddingLeft="8dp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <Spinner
        android:id="@+id/spinner_database"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Spinner"
        />
    <Spinner
        android:id="@+id/spinner_table"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Spinner"
        />
    <Spinner
        android:id="@+id/spinner_column"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Spinner"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:paddingTop="20dp"
      android:paddingBottom="5dp"
      android:paddingLeft="@dimen/data_inspector_material_dialog_padding_around_content_area"
      android:paddingRight="@dimen/data_inspector_material_dialog_padding_around_content_area"
      >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Row ID"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Menu"
        android:alpha="0.54"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Data"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Menu"
        android:alpha="0.54"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CCCCCC"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/data_inspector_material_dialog_padding_around_content_area"
      android:paddingRight="@dimen/data_inspector_material_dialog_padding_around_content_area"
      />
</LinearLayout>